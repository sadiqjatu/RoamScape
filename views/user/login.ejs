<% layout("./layouts/boilerplate") %>
<div class="signup-container">
  <h1 class="signup-title">Login to RoamScape</h1>
  <form method="post" action="/login" class="signup-form" novalidate>

    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" type="text" id="username" placeholder="Enter username" required>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input name="password" type="password" id="password" placeholder="Enter password" required>
    </div>

    <button type="submit" class="btn-signup">Login</button>
  </form>
</div>
